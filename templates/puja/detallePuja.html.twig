{% extends 'base.html.twig' %}

{% block title %}{{parent()}} - Puja{% endblock %}

{% block body %}

    <div class="container h-100 ">
        <div class="row h-100 justify-content-center align-items-center ">
            <div class="col-5 bg-white rounded my-3 p-5 tex-center">
                <h1 class="h3 mb-3 font-weight-normal text-center">Detalle de la Puja</h1>
                <p>Usuario : {{puja.getUser.getName}}  {{puja.getUser.getSurname}}</p>
                <p>Producto: {{puja.getSubasta.getName}}</p>
                <img src="{{ asset('uploads/photos/'~puja.getSubasta.getImage) }}" width="300px" />
                 <p>Precio: {{puja.price}}$</p>
                 <p>Fecha: {{puja.createAt|date('Y-m-d h:i:s')}}</p>
            </div>
        </div>
    </div>
{% endblock %}
