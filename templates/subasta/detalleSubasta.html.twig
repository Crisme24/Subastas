{% extends 'base.html.twig' %}

{% block title %}{{parent()}} - subastas{% endblock %}

{% block body %}

    <div class="container h-100 ">
        <div class="row h-100 justify-content-center align-items-center ">
            <div class="col-5 bg-white rounded my-3 p-5 tex-center">
                <h1 class="h3 mb-3 font-weight-normal text-center">Detalle subasta</h1>
                <p>Usuario : {{subasta.user.name}}  {{subasta.user.surname}}</p>
                <p>Producto: {{subasta.name}}</p>
                <img src="{{ asset('uploads/photos/'~subasta.image) }}" width="150px" />
                 <p>Precio minimo: {{subasta.minPrice}}$</p>
                 <p>Precio maximo: {{subasta.maxPrice}}$</p>
                 <p>Fecha inicio: {{subasta.startDate|date('Y-m-d h:i:s')}}</p>

            </div>
        </div>
    </div>
{% endblock %}
